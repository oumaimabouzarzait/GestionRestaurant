@page
@using ProjetASI.Models;
@model ProjetASI.Pages.Tables.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Éditer</h1>

<h4>Table @(Model.Table?.Id)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Table.Id" />
            <div class="form-group">
                <label asp-for="Table.NbClients" class="control-label"></label>
                <input asp-for="Table.NbClients" class="form-control" />
                <span asp-validation-for="Table.NbClients" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Table.NbPlaces" class="control-label"></label>
                <input asp-for="Table.NbPlaces" class="form-control" />
                <span asp-validation-for="Table.NbPlaces" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Table.Etat" class="control-label"></label>
                <select asp-for="Table.Etat" class="form-control" asp-items="Html.GetEnumSelectList<EtatTable>()"></select>
                <span asp-validation-for="Table.Etat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sauvegarder" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Retourner à la liste des tables</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
