@page
@model ProjetASI.Pages.Tables.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Nouvelle</h1>

<h4>Table</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Table.NbPlaces" class="control-label"></label>
                <input asp-for="Table.NbPlaces" class="form-control" />
                <span asp-validation-for="Table.NbPlaces" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ajouter" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Retourner à la liste des tables</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
