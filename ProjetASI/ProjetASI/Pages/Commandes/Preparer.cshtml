@page
@model ProjetASI.Pages.Commandes.PreparerModel

@{
    ViewData["Title"] = "Preparer";
}

<h1>Préparer</h1>

<h4>Commande @Model.Commande?.Id</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Commande.Id" />
            <input type="hidden" asp-for="Commande.DateHeure" />
            <input type="hidden" asp-for="Commande.Etat" />
            <input type="hidden" asp-for="Commande.Encaissee" />
            <input type="hidden" asp-for="Commande.TableId" />
            <input type="hidden" asp-for="Commande.ServeurId" />
            <div class="form-group">
                <label asp-for="Commande.BarmanId" class="control-label"></label>
                <select asp-for="Commande.BarmanId" class="form-control" asp-items="ViewBag.BarmanId"></select>
                <span asp-validation-for="Commande.BarmanId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Préparer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Retourner à la liste des commandes</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
