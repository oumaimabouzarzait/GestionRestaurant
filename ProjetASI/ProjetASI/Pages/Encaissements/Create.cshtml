@page
@using ProjetASI.Models;
@model ProjetASI.Pages.Encaissements.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Encaissement</h1>

<h4>Facture @(ViewBag.Facture.Id)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Encaissement.FactureId" value="@ViewBag.Facture.Id" />
            <h5>Montant restant à régler : @(ViewBag.MontantRestant.ToString("0.00"))€</h5>
            <div class="form-group">
                <label asp-for="Encaissement.Montant" class="control-label"></label>
                <input asp-for="Encaissement.Montant" class="form-control" />
                <span asp-validation-for="Encaissement.Montant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Encaissement.Type" class="control-label"></label>
                <select asp-for="Encaissement.Type" class="form-control" asp-items="Html.GetEnumSelectList<TypeEncaissement>()">></select>
                <span asp-validation-for="Encaissement.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Encaisser" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Factures/Index">Retourner à la liste des factures</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
