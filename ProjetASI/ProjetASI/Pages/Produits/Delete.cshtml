@page
@model ProjetASI.Pages.Produits.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Supprimer</h1>

<div>
    <h4>Produit @(Model.Produit?.Id)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produit.Nom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produit.Nom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produit.Prix)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produit.Prix)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produit.Stock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produit.Stock)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Produit.Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-page="./Index">Retourer à la liste des produits</a>
    </form>
</div>
