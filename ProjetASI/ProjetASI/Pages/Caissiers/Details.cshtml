        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Caissier.Nom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Caissier.Nom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Caissier.Prenom)
