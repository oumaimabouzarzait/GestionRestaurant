@page
@model ProjetASI.Pages.Serveurs.IndexModel

@{
    ViewData["Title"] = "Les serveurs";
}

<h1>Les serveurs</h1>

<p>
    <a asp-page="Create">Ajouter un serveur</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Serveur[0].Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serveur[0].Prenom)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Serveur) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Éditer</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Détails</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
